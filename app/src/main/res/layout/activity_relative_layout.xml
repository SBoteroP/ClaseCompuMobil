<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RelativeLayout">

    <EditText
            android:id="@+id/editTextText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Name"
            android:ems="10"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
    />
    <Spinner

            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" tools:layout_editor_absoluteY="222dp"
            tools:layout_editor_absoluteX="186dp"

            android:layout_alignParentStart="true"
            android:layout_below="@id/editTextText"
            android:entries="@array/Spinner1"
    />
    <Spinner

            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4" tools:layout_editor_absoluteY="402dp"
            tools:layout_editor_absoluteX="222dp"

            android:layout_alignParentEnd="true"
            android:layout_below="@id/editTextText"
            android:layout_toRightOf="@id/textView3"
            android:entries="@array/Spinner2"
    />
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button" tools:layout_editor_absoluteY="546dp"
            tools:layout_editor_absoluteX="229dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textView4"

    />
</RelativeLayout>